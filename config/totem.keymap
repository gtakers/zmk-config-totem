            //                                     ┃    DEL    ┃    TAB    ┃    SPC    ┃   ┃   ENTER   ┃           ┃   BSPC    ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
               &kp Q      &kp W       &kp E                              &kp R                        &kp T                 &kp Y                &kp U             &kp I                                &kp O       &kp P
               &mt TAB A  &mt LALT S  &mt LEFT_SHIFT D                   &mt LGUI F                   &mt LEFT_CONTROL G    &mt RIGHT_CONTROL H  &mt RGUI J        &mt RIGHT_SHIFT K                    &mt RALT L  &mt TAB SEMI
&kp BACKSLASH  &kp Z      &kp X       &kp C                              &kp V                        &kp B                 &kp N                &kp M             &kp COMMA                            &kp DOT     &kp FSLH      &kp APOS
                                      &mt LS(LA(LC(LEFT_GUI))) LG(LEFT)  &mt LA(BACKSPACE) BACKSPACE  &tog 2                &tog 1               &mt RETURN SPACE  &mt RA(RC(RS(RIGHT_GUI))) RG(RIGHT)
            >;
